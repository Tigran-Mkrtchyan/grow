<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1
           https://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>zip-archive</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../.platform</directory>
            <outputDirectory>/.platform</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../.ebextensions</directory>
            <outputDirectory>/.ebextensions</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>../Procfile</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
